<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Auto Image Slider -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/imageSlider"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre de la Película -->
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi villano Favorito 4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageSlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Fecha de Lanzamiento -->
    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de Lanzamiento: 03 de Julio del 2024"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Autores Principales -->
    <TextView
        android:id="@+id/txtAutores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Autores Principales:\n- Steven Carrel (GRU)\n- Pierre Coffin (Stuart)\n- Miranda Cosgrove (Margo)"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción: Uno de los más grandes supervillanos del mundo, quien, deseoso por conquistar el planeta, idea un plan maquiavélico para lograrlo. Sin embargo, en su vida se aparecen tres niñas huérfanas que cambian su vida"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtAutores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón para abrir URL -->
    <Button
        android:id="@+id/btnSitioWeb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Visitar Sitio Web"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>